    <script>
        // Initialize phone input with country codes
        const phoneInput = document.getElementById("phone");
        const iti = window.intlTelInput(phoneInput, {
            initialCountry: "in",
            separateDialCode: true,
            utilsScript: "https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/js/utils.js",
        });

        // DOM Elements
        const accessBtn = document.getElementById("accessBtn");
        const adminAccessBtn = document.getElementById("adminAccessBtn");
        const registrationModal = document.getElementById("registrationModal");
        const otpModal = document.getElementById("otpModal");
        const successModal = document.getElementById("successModal");
        const adminLoginModal = document.getElementById("adminLoginModal");
        const adminPanel = document.getElementById("adminPanel");
        const closeRegistration = document.getElementById("closeRegistration");
        const closeOtp = document.getElementById("closeOtp");
        const closeSuccess = document.getElementById("closeSuccess");
        const closeAdminLogin = document.getElementById("closeAdminLogin");
        const registrationForm = document.getElementById("registrationForm");
        const backToDetails = document.getElementById("backToDetails");
        const verifyOtpBtn = document.getElementById("verifyOtp");
        const resendOtpLink = document.getElementById("resendOtp");
        const exploreResourcesBtn = document.getElementById("exploreResources");
        const adminLoginBtn = document.getElementById("adminLoginBtn");
        const otpInputs = document.querySelectorAll('.otp-input');
        const countdownElement = document.getElementById('countdown');
        const timerElement = document.getElementById('timer');
        const userNameElement = document.getElementById('userName');
        const usersTableBody = document.getElementById('usersTableBody');
        const searchUsersInput = document.getElementById('searchUsers');
        const clearSearchBtn = document.getElementById('clearSearch');
        const exportDataBtn = document.getElementById('exportData');
        const totalUsersElement = document.getElementById('totalUsers');
        const todayUsersElement = document.getElementById('todayUsers');
        const uniqueUsersElement = document.getElementById('uniqueUsers');
        const smsStatusMessage = document.getElementById('smsStatusMessage');

        // State variables
        let currentOtp = '';
        let otpExpiryTime = 0;
        let otpAttempts = 0;
        let currentUser = null;
        let countdownInterval = null;
        let smsSentToday = false;

        // Admin password
        const ADMIN_PASSWORD = "admin123";

        // Check if SMS was already sent today
        function checkSMSSentToday() {
            const lastSMSSent = localStorage.getItem('lastSMSSentDate');
            const today = new Date().toDateString();
            return lastSMSSent === today;
        }

        // Update SMS sent date
        function updateSMSSentDate() {
            const today = new Date().toDateString();
            localStorage.setItem('lastSMSSentDate', today);
            smsSentToday = true;
        }

        // Event Listeners
        accessBtn.addEventListener('click', openRegistrationModal);
        adminAccessBtn.addEventListener('click', openAdminLoginModal);
        closeRegistration.addEventListener('click', closeRegistrationModal);
        closeOtp.addEventListener('click', closeOtpModal);
        closeSuccess.addEventListener('click', closeSuccessModal);
        closeAdminLogin.addEventListener('click', closeAdminLoginModal);
        registrationForm.addEventListener('submit', handleRegistrationSubmit);
        backToDetails.addEventListener('click', backToRegistration);
        verifyOtpBtn.addEventListener('click', verifyOtp);
        resendOtpLink.addEventListener('click', resendOtp);
        exploreResourcesBtn.addEventListener('click', exploreResources);
        adminLoginBtn.addEventListener('click', handleAdminLogin);
        searchUsersInput.addEventListener('input', filterUsers);
        clearSearchBtn.addEventListener('click', clearSearch);
        exportDataBtn.addEventListener('click', exportData);

        // OTP Input handling
        otpInputs.forEach(input => {
            input.addEventListener('input', (e) => {
                const value = e.target.value;
                const index = parseInt(e.target.dataset.index);
                
                // Auto-focus next input
                if (value && index < 6) {
                    otpInputs[index].focus();
                }
                
                // Enable verify button if all inputs are filled
                const allFilled = Array.from(otpInputs).every(input => input.value);
                verifyOtpBtn.disabled = !allFilled;
            });
            
            input.addEventListener('keydown', (e) => {
                // Handle backspace to focus previous input
                if (e.key === 'Backspace' && !e.target.value && parseInt(e.target.dataset.index) > 1) {
                    otpInputs[parseInt(e.target.dataset.index) - 2].focus();
                }
            });
        });

        // Functions
        function openRegistrationModal(e) {
            e.preventDefault();
            registrationModal.classList.add('active');
        }

        function openAdminLoginModal(e) {
            e.preventDefault();
            adminLoginModal.classList.add('active');
        }

        function closeRegistrationModal() {
            registrationModal.classList.remove('active');
            resetRegistrationForm();
        }

        function closeOtpModal() {
            otpModal.classList.remove('active');
            resetOtpForm();
        }

        function closeSuccessModal() {
            successModal.classList.remove('active');
        }

        function closeAdminLoginModal() {
            adminLoginModal.classList.remove('active');
            document.getElementById('adminPassword').value = '';
            document.getElementById('adminError').style.display = 'none';
        }

        function resetRegistrationForm() {
            registrationForm.reset();
            document.querySelectorAll('.error-message').forEach(el => {
                el.style.display = 'none';
            });
        }

        function resetOtpForm() {
            otpInputs.forEach(input => {
                input.value = '';
            });
            document.getElementById('otpError').style.display = 'none';
            verifyOtpBtn.disabled = true;
            smsStatusMessage.innerHTML = '';
            
            if (countdownInterval) {
                clearInterval(countdownInterval);
            }
        }

        function handleRegistrationSubmit(e) {
            e.preventDefault();
            
            const name = document.getElementById('name').value.trim();
            const email = document.getElementById('email').value.trim();
            const phone = iti.getNumber();
            
            // Validation
            let isValid = true;
            
            if (!name) {
                document.getElementById('nameError').style.display = 'block';
                isValid = false;
            } else {
                document.getElementById('nameError').style.display = 'none';
            }
            
            if (!validateEmail(email)) {
                document.getElementById('emailError').style.display = 'block';
                isValid = false;
            } else {
                document.getElementById('emailError').style.display = 'none';
            }
            
            if (!iti.isValidNumber()) {
                document.getElementById('phoneError').style.display = 'block';
                isValid = false;
            } else {
                document.getElementById('phoneError').style.display = 'none';
            }
            
            if (!isValid) return;
            
            // Store user data
            currentUser = {
                name,
                email,
                phone,
                timestamp: new Date().toISOString()
            };
            
            // Show loading state
            const submitBtn = document.getElementById('submitDetails');
            const originalText = submitBtn.querySelector('.btn-text').textContent;
            submitBtn.querySelector('.btn-text').textContent = 'Sending OTP...';
            submitBtn.disabled = true;
            
            // Generate and send OTP
            generateAndSendOtp()
                .then(() => {
                    // Show OTP modal
                    registrationModal.classList.remove('active');
                    otpModal.classList.add('active');
                    
                    // Start countdown
                    startOtpCountdown();
                })
                .catch(error => {
                    alert('Failed to send OTP: ' + error.message);
                })
                .finally(() => {
                    // Reset button state
                    submitBtn.querySelector('.btn-text').textContent = originalText;
                    submitBtn.disabled = false;
                });
        }

        function validateEmail(email) {
            const re = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
            return re.test(email);
        }

        async function generateAndSendOtp() {
            // Generate 6-digit OTP
            currentOtp = Math.floor(100000 + Math.random() * 900000).toString();
            otpExpiryTime = Date.now() + 5 * 60 * 1000; // 5 minutes from now
            
            console.log(`OTP for ${currentUser.phone}: ${currentOtp}`);
            
            // Send real OTP using TextBelt
            await sendRealOtp(currentUser.phone, currentOtp);
        }

        // Function to send real OTP using TextBelt
        async function sendRealOtp(phoneNumber, otp) {
            // Clean phone number - remove all non-digit characters
            let cleanPhone = phoneNumber.replace(/\D/g, '');
            
            // For Indian numbers starting with 91, ensure it's 12 digits
            if (cleanPhone.startsWith('91') && cleanPhone.length === 12) {
                // Already correct format
            } else if (cleanPhone.length === 10) {
                // Add country code for Indian numbers
                cleanPhone = '91' + cleanPhone;
            }
            
            console.log('Sending OTP to:', cleanPhone);
            
            // Check if SMS was already sent today
            smsSentToday = checkSMSSentToday();
            
            if (smsSentToday) {
                showSMSStatus('warning', 'Free SMS limit reached for today. OTP will be shown here instead.');
                showSMSStatus('success', `Your OTP is: ${currentOtp}`);
                return true;
            }
            
            try {
                // Using TextBelt API (1 free SMS per day)
                const response = await fetch('https://textbelt.com/text', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({
                        phone: cleanPhone,
                        message: `Your OTP code is: ${otp}. Valid for 5 minutes.`,
                        key: 'textbelt', // Free tier key
                    }),
                });

                const data = await response.json();
                
                if (data.success) {
                    console.log('OTP sent successfully via TextBelt');
                    showSMSStatus('success', 'âœ“ OTP sent successfully to your phone!');
                    updateSMSSentDate();
                    return true;
                } else {
                    // If TextBelt fails (quota exceeded or other error)
                    if (data.quotaRemaining === 0) {
                        showSMSStatus('warning', 'Free SMS limit reached for today. OTP will be shown here instead.');
                        updateSMSSentDate();
                    } else {
                        showSMSStatus('error', 'SMS service temporarily unavailable. OTP will be shown here.');
                    }
                    showSMSStatus('success', `Your OTP is: ${currentOtp}`);
                    return true;
                }
            } catch (error) {
                console.error('SMS service failed:', error);
                // Fallback: Show OTP in status message
                showSMSStatus('error', 'SMS service unavailable. OTP will be shown here.');
                showSMSStatus('success', `Your OTP is: ${currentOtp}`);
                return true;
            }
        }

        function showSMSStatus(type, message) {
            const statusDiv = document.createElement('div');
            statusDiv.className = `sms-status sms-${type}`;
            statusDiv.textContent = message;
            smsStatusMessage.appendChild(statusDiv);
        }

        function startOtpCountdown() {
            let timeLeft = 60;
            
            countdownInterval = setInterval(() => {
                timeLeft--;
                countdownElement.textContent = timeLeft;
                
                if (timeLeft <= 0) {
                    clearInterval(countdownInterval);
                    timerElement.style.display = 'none';
                    resendOtpLink.classList.remove('disabled');
                }
            }, 1000);
        }

        function backToRegistration() {
            otpModal.classList.remove('active');
            registrationModal.classList.add('active');
            resetOtpForm();
        }

        function verifyOtp() {
            const enteredOtp = Array.from(otpInputs).map(input => input.value).join('');
            
            // Check if OTP is expired
            if (Date.now() > otpExpiryTime) {
                document.getElementById('otpError').textContent = 'OTP has expired. Please request a new one.';
                document.getElementById('otpError').style.display = 'block';
                return;
            }
            
            // Check if OTP is correct
            if (enteredOtp === currentOtp) {
                // Success - grant access
                grantAccess();
            } else {
                // Incorrect OTP
                otpAttempts++;
                document.getElementById('otpError').textContent = `Invalid OTP. ${3 - otpAttempts} attempts remaining.`;
                document.getElementById('otpError').style.display = 'block';
                
                if (otpAttempts >= 3) {
                    // Too many failed attempts
                    document.getElementById('otpError').textContent = 'Too many failed attempts. Please request a new OTP.';
                    verifyOtpBtn.disabled = true;
                    resendOtpLink.classList.remove('disabled');
                }
            }
        }

        function resendOtp(e) {
            e.preventDefault();
            
            if (resendOtpLink.classList.contains('disabled')) return;
            
            // Show loading state
            const originalText = resendOtpLink.textContent;
            resendOtpLink.textContent = 'Sending...';
            resendOtpLink.classList.add('disabled');
            
            // Clear previous status messages
            smsStatusMessage.innerHTML = '';
            
            // Generate new OTP
            generateAndSendOtp()
                .then(() => {
                    // Reset UI
                    resetOtpForm();
                    timerElement.style.display = 'block';
                    document.getElementById('otpError').style.display = 'none';
                    
                    // Start countdown again
                    startOtpCountdown();
                })
                .catch(error => {
                    alert('Failed to resend OTP: ' + error.message);
                    resendOtpLink.textContent = originalText;
                    resendOtpLink.classList.remove('disabled');
                });
        }

        function grantAccess() {
            // Store user data
            storeUserData();
            
            // Update UI to show unlocked content
            document.querySelectorAll('.resource-img').forEach(img => {
                img.classList.remove('locked');
            });
            
            // Update access button
            accessBtn.innerHTML = '<i class="fas fa-check"></i> Access Granted';
            accessBtn.style.background = 'var(--success)';
            accessBtn.onclick = function(e) {
                e.preventDefault();
                successModal.classList.add('active');
            };
            
            // Show success modal
            otpModal.classList.remove('active');
            userNameElement.textContent = currentUser.name;
            successModal.classList.add('active');
            
            // Update admin panel
            updateAdminPanel();
        }

        function exploreResources() {
            successModal.classList.remove('active');
            
            // Scroll to resources
            document.querySelector('.content-grid').scrollIntoView({ 
                behavior: 'smooth' 
            });
        }

        function handleAdminLogin() {
            const password = document.getElementById('adminPassword').value;
            
            if (password === ADMIN_PASSWORD) {
                adminLoginModal.classList.remove('active');
                adminPanel.classList.add('active');
                updateAdminPanel();
                document.getElementById('adminPassword').value = '';
            } else {
                document.getElementById('adminError').style.display = 'block';
            }
        }

        function storeUserData() {
            // Get existing users from localStorage
            let users = JSON.parse(localStorage.getItem('otpAccessUsers')) || [];
            
            // Add current user
            users.push({
                ...currentUser,
                id: Date.now().toString(),
                contentAccessed: 'Premium Design Resources',
                sessionDuration: null
            });
            
            // Save back to localStorage
            localStorage.setItem('otpAccessUsers', JSON.stringify(users));
        }

        function updateAdminPanel() {
            const users = JSON.parse(localStorage.getItem('otpAccessUsers')) || [];
            
            // Update stats
            totalUsersElement.textContent = users.length;
            
            const today = new Date().toDateString();
            const todayUsers = users.filter(user => 
                new Date(user.timestamp).toDateString() === today
            );
            todayUsersElement.textContent = todayUsers.length;
            
            const uniqueEmails = [...new Set(users.map(user => user.email))];
            uniqueUsersElement.textContent = uniqueEmails.length;
            
            // Update table
            renderUsersTable(users);
        }

        function renderUsersTable(users) {
            usersTableBody.innerHTML = '';
            
            if (users.length === 0) {
                usersTableBody.innerHTML = `
                    <tr>
                        <td colspan="5" style="text-align: center; padding: 30px;">
                            No user data available yet
                        </td>
                    </tr>
                `;
                return;
            }
            
            // Sort by most recent first
            users.sort((a, b) => new Date(b.timestamp) - new Date(a.timestamp));
            
            users.forEach(user => {
                const row = document.createElement('tr');
                
                const date = new Date(user.timestamp);
                const formattedDate = `${date.toLocaleDateString()} ${date.toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'})}`;
                
                row.innerHTML = `
                    <td>${user.name}</td>
                    <td>${user.email}</td>
                    <td>${user.phone}</td>
                    <td>${formattedDate}</td>
                    <td>${user.contentAccessed}</td>
                `;
                
                usersTableBody.appendChild(row);
            });
        }

        function filterUsers() {
            const searchTerm = searchUsersInput.value.toLowerCase();
            const users = JSON.parse(localStorage.getItem('otpAccessUsers')) || [];
            
            if (!searchTerm) {
                renderUsersTable(users);
                return;
            }
            
            const filteredUsers = users.filter(user => 
                user.name.toLowerCase().includes(searchTerm) ||
                user.email.toLowerCase().includes(searchTerm) ||
                user.phone.includes(searchTerm)
            );
            
            renderUsersTable(filteredUsers);
        }

        function clearSearch() {
            searchUsersInput.value = '';
            updateAdminPanel();
        }

        function exportData() {
            const users = JSON.parse(localStorage.getItem('otpAccessUsers')) || [];
            
            if (users.length === 0) {
                alert('No data to export');
                return;
            }
            
            // Convert to CSV
            const headers = ['Name', 'Email', 'Phone', 'Access Time', 'Content Accessed'];
            const csvContent = [
                headers.join(','),
                ...users.map(user => [
                    `"${user.name}"`,
                    `"${user.email}"`,
                    `"${user.phone}"`,
                    `"${new Date(user.timestamp).toLocaleString()}"`,
                    `"${user.contentAccessed}"`
                ].join(','))
            ].join('\n');
            
            // Create download link
            const blob = new Blob([csvContent], { type: 'text/csv' });
            const url = URL.createObjectURL(blob);
            const a = document.createElement('a');
            a.href = url;
            a.download = `user-access-data-${new Date().toISOString().split('T')[0]}.csv`;
            document.body.appendChild(a);
            a.click();
            document.body.removeChild(a);
            URL.revokeObjectURL(url);
        }

        // Initialize on load
        document.addEventListener('DOMContentLoaded', function() {
            smsSentToday = checkSMSSentToday();
            console.log('SMS sent today:', smsSentToday);
        });
    </script>
</body>
</html>
